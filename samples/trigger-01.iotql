CREATE TRIGGER
    front_door_light
SELECT
    state:open = true
WHERE
    meta:name = "Front Door Contact Switch"
BEGIN
    SET
        state:on = true
    WHERE
        meta:facet & facets.lighting
    AND
        meta:zone & "Foyer"
        ;
    SET
        state:on = false
    WHERE
        meta:facet & facets.lighting
    AND
        meta:zone & "Foyer"
        ;
END
;
